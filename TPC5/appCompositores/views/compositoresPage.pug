extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1(style="display: flex; justify-content: space-between; align-items: center;")
                | #{title}
                a.w3-btn.w3-circle.w3-grey(href="/compositores/create", style="text-decoration: none;")
                    img(src="../images/person-fill-add.svg", style="width: 40px;")
        .w3-container
            table.w3-table-all
                tr
                    th Nome
                    th Período
                    th Informação
                    th Editar
                    th Eliminar
                each compositor in compositores
                    tr
                        td= compositor.nome
                        td= compositor.periodo
                        td
                            a(href='/compositores/' + compositor.id)
                                button.w3-button.w3-circle.w3-grey
                                    img(src='../images/info-lg.svg')
                        td
                            a(href='/compositores/edit/' + compositor.id)
                                button.w3-button.w3-circle.w3-grey
                                    img(src='../images/pencil-fill.svg')
                        td 
                            a(href='/compositores/delete/' + compositor.id)
                                button.w3-button.w3-circle.w3-grey
                                    img(src='../images/trash3-fill.svg')

        a(href= voltar, style="text-decoration: none;")
            button.w3-button.w3-block.w3-grey
                | Voltar

        footer.w3-container.w3-teal
            h5 Criado por Diogo Marques #{data}