extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1= title

        form.w3-container(method="POST")
            fieldset
                label Nome
                input.w3-input.w3-round(type="text", name="nome", placeholder="Por preecher", required)
                label Período
                input.w3-input.w3-round(type="text", name="periodo", placeholder="Por preecher", required)
                label Data de Nascimento
                input.w3-input.w3-round(type="date", name="dataNasc", required)
                label Data de Óbito
                input.w3-input.w3-round(type="date", name="dataObito", required)
                label Biografia
                input.w3-input.w3-round(type="text", name="bio", placeholder="Por preecher", required)

            button.w3-button.w3-block.w3-grey(type="submit")
                | Guardar

        footer.w3-container.w3-teal
            h5 Criado por Diogo Marques #{data}